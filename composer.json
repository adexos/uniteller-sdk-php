{
  "name": "adexos/uniteller-php-sdk",
  "description": "PHP Library for integration with Uniteller payment processing.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Aurelien Fontaine",
      "email": "afontaine@adexos.fr"
    }
  ],
  "require": {
    "php": "^7.4||^8.0",
    "php-http/httplug": "^2.2.0",
    "php-http/guzzle6-adapter": "^2.0.0",
    "guzzlehttp/guzzle": "^6.5.0||^7.3.0",
    "symfony/options-resolver": "^5.3"
  },
  "require-dev": {
    "symfony/var-dumper": "^3.2",
    "phpunit/phpunit": "^9.5"
  },
  "autoload": {
    "psr-4": {
      "Adexos\\Uniteller\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Adexos\\Uniteller\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": "phpunit --coverage-text"
  }
}
